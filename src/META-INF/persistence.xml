<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit name="SpringData" transaction-type="RESOURCE_LOCAL">


	<class>com.gi.entity.PlatoCarta</class>
	<class>com.gi.entity.Categoria</class>
	<class>com.gi.entity.Estado</class>
	<class>com.gi.entity.Incidencia</class>
	<class>com.gi.entity.Usuario</class>
	<class>com.gi.entity.TipoUsuario</class>

		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bd_gestionincidencia" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.password" value="mysql" />
			<property name="eclipselink.logging.level" value="OFF" />
<!--  			<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>  -->
 			
		</properties>

	</persistence-unit>
</persistence>
